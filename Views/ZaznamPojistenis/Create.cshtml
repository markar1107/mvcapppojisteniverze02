@model mvcapppojisteniverze02.Models.ZaznamPojisteni

@{
    ViewData["Title"] = "Vytvořit pojištění";
}

<br />
<p class="h3">Přidat pojištění</p>
<hr />

<p class="lead">
    Klient: @ViewBag.konkretniKlient.Jmeno @ViewBag.konkretniKlient.Prijmeni
</p> 

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-8">
            <div class="form-group">
                <label asp-for="ProduktID" class="control-label"></label>
                <select asp-for="ProduktID" class="form-control form-select" asp-items="ViewBag.ProduktID"></select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="Cena" class="control-label"></label>
                <input asp-for="Cena" class="form-control" />
                <span asp-validation-for="Cena" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <label asp-for="ZacatekPojisteni" class="control-label"></label>
                <input asp-for="ZacatekPojisteni" class="form-control" />
                <span asp-validation-for="ZacatekPojisteni" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="KonecPojisteni" class="control-label"></label>
                <input asp-for="KonecPojisteni" class="form-control" />
                <span asp-validation-for="KonecPojisteni" class="text-danger"></span>
            </div>
        </div>
    </div>
    <br />
    <div class="form-group text-center">
        <input type="submit" value="Uložit" class="btn btn-primary" />
    </div>
</form>
<hr />

<div>
    <a class="accordion-button btn btn-info text-dark" style="height: 30px;" asp-controller="Klients" asp-action="Details" asp-route-id="@ViewBag.konkretniKlient.ID">Zpátky na detail klienta</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
