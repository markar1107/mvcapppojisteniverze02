@model mvcapppojisteniverze02.Models.ZaznamPojisteni

@{
    ViewData["Title"] = "Editace pojištění";
}

<br />
<p class="h3 p-3 bg-secondary bg-opacity-10 border border-dark rounded">Editace pojištění</p>

<div class="lead">
    <div class="d-block p-2 bg-success bg-opacity-10 shadow-sm">
        @Html.DisplayNameFor(model => model.Klient)
        @Html.DisplayFor(model => model.Klient.Jmeno)
        @Html.DisplayFor(model => model.Klient.Prijmeni)
    </div>
</div>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ZaznamPojisteniID" />
                <div class="form-group">
                    <label asp-for="KlientID" class="control-label"></label>
                    <select asp-for="KlientID" class="form-control" asp-items="ViewBag.KlientID"></select>
                    <span asp-validation-for="KlientID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProduktID" class="control-label"></label>
                    <select asp-for="ProduktID" class="form-control" asp-items="ViewBag.ProduktID"></select>
                    <span asp-validation-for="ProduktID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cena" class="control-label"></label>
                    <input asp-for="Cena" class="form-control" />
                    <span asp-validation-for="Cena" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ZacatekPojisteni" class="control-label"></label>
                    <input asp-for="ZacatekPojisteni" class="form-control" />
                    <span asp-validation-for="ZacatekPojisteni" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="KonecPojisteni" class="control-label"></label>
                    <input asp-for="KonecPojisteni" class="form-control" />
                    <span asp-validation-for="KonecPojisteni" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
