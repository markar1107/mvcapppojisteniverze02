@model mvcapppojisteniverze02.Models.Klient

@{
    ViewData["Title"] = "Nový klient";
}

<br />
<p class="h3 p-3 bg-secondary bg-opacity-10 border border-dark rounded shadow">Nový klient</p>


<hr />
<div class="container bg-warning bg-opacity-25 shadow-sm">
    <div>
        <br />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <strong><label asp-for="Jmeno" class="control-label"></label></strong>
                        <input asp-for="Jmeno" class="form-control" />
                        <span asp-validation-for="Jmeno" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <strong><label asp-for="Prijmeni" class="control-label"></label></strong>
                        <input asp-for="Prijmeni" class="form-control" />
                        <span asp-validation-for="Prijmeni" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <strong> <label asp-for="Email" class="control-label"></label></strong>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <strong><label asp-for="Telefon" class="control-label"></label></strong>
                        <input asp-for="Telefon" class="form-control" />
                        <span asp-validation-for="Telefon" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <strong> <label asp-for="Ulice" class="control-label"></label></strong>
                        <input asp-for="Ulice" class="form-control" />
                        <span asp-validation-for="Ulice" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <strong><label asp-for="Mesto" class="control-label"></label></strong>
                        <input asp-for="Mesto" class="form-control" />
                        <span asp-validation-for="Mesto" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-1 offset-4">
                    <div class="form-group">
                        <strong> <label asp-for="Psc" class="control-label"></label></strong>
                        <input asp-for="Psc" class="form-control" />
                        <span asp-validation-for="Psc" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <br />
            <div class="form-group text-center">
                <input type="submit" value="Uložit" class="btn btn-primary" />
            </div>
            <br />
        </form>
    </div>
</div>






<hr />
<div>
    <a class="accordion-button btn btn-info text-dark shadow-sm" style="height: 30px;" asp-action="Index">Zpátky na seznam klientů</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
       }
