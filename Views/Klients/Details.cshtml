@model mvcapppojisteniverze02.Models.Klient

@{
    ViewData["Title"] = "Detail";
}

<h1>Detail</h1>

<div>
    <h4>Klient</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Jmeno)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Jmeno)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prijmeni)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prijmeni)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefon)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefon)
        </dd>
        <dt class="col sm-2">
            @Html.DisplayNameFor(model => model.ZaznamPojisteniKolekce)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Název</th>
                    <th>Popis</th>
                    <th>Cena</th>
                    <th>Začátek pojištění</th>
                    <th>Konec pojištění</th>
                </tr>
                @foreach(var polozka in Model.ZaznamPojisteniKolekce)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelPolozka => polozka.Produkt.Nazev)
                        </td>
                        <td>
                            @Html.DisplayFor(modelPolozka => polozka.Produkt.Popis)
                        </td>
                        <td>
                            @Html.DisplayFor(modelPolozka => polozka.Cena)
                        </td>
                        <td>
                            @Html.DisplayFor(modelPolozka => polozka.ZacatekPojisteni)
                        </td>
                        <td>
                            @Html.DisplayFor(modelPolozka => polozka.KonecPojisteni)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edituj klienta</a> 
    <a asp-controller="ZaznamPojistenis" asp-action="Create" asp-route-id="@Model?.ID">Přidej pojištění</a>|
    <a asp-action="Index">Zpátky na seznam</a>
</div>
