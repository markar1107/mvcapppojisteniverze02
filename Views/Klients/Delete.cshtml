@model mvcapppojisteniverze02.Models.Klient

@{
    ViewData["Title"] = "Odstranit klienta";
}

<br />
<p class="h3 p-3 bg-secondary bg-opacity-10 border border-dark rounded shadow">Odstranit klienta</p>
<hr />

<div class="container bg-warning bg-opacity-25 shadow-sm">
    <br />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Jmeno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Jmeno)
            @Html.DisplayFor(model => model.Prijmeni)
        </dd>
        <dt class="col-sm-2">
            Adresa
            @*@Html.DisplayNameFor(model => model.Ulice)*@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ulice)
            @Html.DisplayFor(model => model.Mesto),
            @Html.DisplayFor(model => model.Psc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telefon)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefon)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <div class="text-center">
            <input type="submit" value="Odstranit" class="btn btn-danger" />
        </div>
    </form>
    <br />
</div>
<hr />
<div>
    <a class="accordion-button btn btn-info text-dark shadow-sm" style="height: 30px;" asp-action="Index">Zpátky na seznam klientů</a>
</div>
